<% if(recommendations.hasRecommendations){ %>
	<h4>
		Similar Searches:
		<% if (recommendations.author) {%> 
			</br>
			Authors: <%=recommendations.author%>

		<%}%>
		
		<% if (recommendations.title) {%>
			</br>
			 Books: <%=recommendations.title%>
		<%}%>
		
		<% if (recommendations.publisher) {%>
			</br>
			 Publishers: <%=recommendations.publisher%>
		<%}%>
	</h4>
	</br>
<% } %>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Author</th>
			<th>Title</th>
			<th>Publisher</th>
			<th>ISBN</th>
			<th>Price</th>
			<th>Link</th>
		</tr>
	</thead>

	<tbody>
	<% if(resultados.length == 0) {%>
		<tr>
			<td align="center" colspan="5">
				No Books were found with these fields
			</td>
		</tr>
	<%}else{%>
		<% resultados.forEach(function(resultado){ %>
		<tr>
			<td><%= resultado.author%></td>
			<td><%= resultado.title%></td>
			<td><%= resultado.publisher %></td>
			<td><%= resultado.isbn %></th>
			<td><%= resultado.price %></th>
			<td>
				<a target="_blank" href=<%= resultado.link %> class="btn btn-link btn-sm">Link</a>
			</td>			
		</tr>
		<%})%>
	<%}%>
	</tbody>
</table>